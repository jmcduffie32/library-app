<div class="container">
  <h1>Books</h1>
  <ol class="breadcrumb">
    <li class="actice">
    Books
    </li>
  </ol>

  <div class="row">
    <div class='col-sm-12'>
      <p>
      <form>
        <legend>Search</legend>
        <div class='col-xs-4'>
          <input type='text' class='form-control' value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword' >
        </div>
      </form>
      </p>
      <p class='pull-right'>
      <a href='#' id='show-form' class='btn btn-primary'>Add a Book</a>
      </p>
    </div>
  </div>
  <hr>

  <div class='col-sm-12 book-form'>
    <p>
    <%= form_for(@book, remote: true, html: {class: 'horizontal-form'}) do |f| %>
    <legend>New Book</legend>

    <div class='col-sm-5'>
      <div class='form-group'>

        <label><strong>Genre</strong></label>

        <%= f.collection_radio_buttons(:genre_id, Genre.all, :id, :name) %>

      </div>

      <br>

      <div class='form-group'>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Title' %>
      </div>
      <div class='form-group'>
        <%= f.text_field :author, class: 'form-control', placeholder: 'Author' %>
      </div>
      <div class='form-group'>
        <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
      </div>

      <div class='form-group'>
        <%= f.submit class: 'btn btn-primary' %>
      </div>


    </div>
  <% end %>
    <br>
    </p>
  </div>


  <div class="row">
    <div class="col-sm-8">
      <ul class="list-unstyled book-list">

        <%= render @books %>

      </ul>
    </div>
    <div class='col-sm-4'>
      <h2>Genres</h2>
      <ul class="list-unstyled">
        <% @genres.each do |genre| %>
          <li>
        <%= link_to genre.name, books_path(filter: genre.name), class: 'label label-primary' %>
        </li>
      <% end %>
        <li> <%= link_to "Show All", books_path, class: 'label label-primary' %></li>
      </ul>
    </div>
  </div>



</div>
